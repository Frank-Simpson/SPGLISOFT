<HBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spglisoft.controladores.FXMLAnadirUsuarioController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Añadir Usuario">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="25.0" left="35.0" top="30.0" />
               </VBox.margin>
            </Label>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </Separator>
            <GridPane prefHeight="250.0" prefWidth="1000.0">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="468.00316038416724" minWidth="10.0" prefWidth="360.66905500640263" />
                  <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="439.33522781493804" minWidth="10.0" prefWidth="437.33522781493804" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Nombre: " />
                  <Label text="Apellidos: " GridPane.rowIndex="1" />
                  <Label text="Tipo de usuario: " GridPane.rowIndex="4" />
                  <TextField fx:id="tfName" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" />
                  <TextField fx:id="tfEmail" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <ComboBox fx:id="cbUserType" onAction="#cbUserType" prefHeight="26.0" prefWidth="170.0" promptText="Seleccionar" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text="Correo electrónico: " GridPane.rowIndex="2" />
                  <Label text="Contraseña: " GridPane.rowIndex="3" />
                  <PasswordField fx:id="tfPassword" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="tfLastname" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </GridPane>
            <StackPane prefHeight="51.0" prefWidth="1000.0">
               <children>
                  <GridPane fx:id="gridPaneDeveloper" prefHeight="90.0" prefWidth="1000.0" visible="false">
                     <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="528.6702379361967" minWidth="10.0" prefWidth="468.5" />
                        <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="540.0599670410156" minWidth="0.0" prefWidth="532.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Matrícula: " />
                        <TextField fx:id="tfStudentId" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </StackPane>
            <ButtonBar prefHeight="39.0" prefWidth="800.0">
               <buttons>
                  <Button fx:id="btnContinue" mnemonicParsing="false" onAction="#btnContinue" prefHeight="26.0" prefWidth="75.0" text="Guardar" visible="false" />
               </buttons>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets right="235.0" />
               </padding>
            </ButtonBar>
            <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#btnReturnToMainMenu" text="Regresar" />
              </buttons>
               <padding>
                  <Insets right="50.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="50.0" top="50.0" />
